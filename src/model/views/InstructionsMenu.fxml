<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.resources.InstructionsMenuController">
   <children>
      <VBox prefHeight="500.0" prefWidth="800.0">
         <children>
            <GridPane prefHeight="110.0" prefWidth="800.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                         <Font name="Ubuntu Bold" size="40.0"/>
                     </font>
                  </Text>
                   <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#backButtonClicked" text="←"
                           translateX="15.0" translateY="15.0" GridPane.halignment="LEFT" GridPane.valignment="TOP"/>
               </children>
            </GridPane>
            <HBox prefHeight="395.0" prefWidth="800.0">
               <children>
                  <TextArea fx:id="textArea" editable="false" prefHeight="305.0" prefWidth="700.0" text="Name Sayer is a name pronounciation application designed and created by Rowan Hart and Michelle Tan. It has been designed to improve users' pronounciation of difficult names, an important skill in an increasingly multicultural world.&#10;&#10;For further information or help regarding Name Sayer, please email rhar768@aucklanduni.ac.nz or mtan264@aucklanduni.ac.nz.&#10;" wrapText="true">
                     <HBox.margin>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="NONE" />
                     </cursor>
                  </TextArea>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
