<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.resources.NameDetailsController">
   <left>
      <Region prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <ButtonBar prefHeight="70.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#playButtonClicked" text="Play  ►" translateX="-300.0" />
            <Button fx:id="setDefaultBtn" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#setDefaultClicked" text="Set Default" translateX="-250.0" />
            <Button fx:id="deleteBtn" alignment="CENTER" mnemonicParsing="false" onAction="#deleteBtnPressed" text="Delete" translateX="-200.0" />
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
             <GridPane prefHeight="38.0" prefWidth="500.0">
                 <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                 </rowConstraints>
                 <children>
                     <Label text="Audio Files">
                         <font>
                             <Font name="System Bold" size="13.0"/>
                         </font>
                     </Label>
                     <Label fx:id="defaultLabel" text="Default: Name.wav" textAlignment="JUSTIFY"
                            GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                         <font>
                             <Font name="System Bold" size="13.0"/>
                         </font>
                     </Label>
                 </children>
             </GridPane>
             <ProgressBar fx:id="progressBar" prefHeight="33.0" prefWidth="500.0" progress="0.0"/>
             <ListView fx:id="nameListView" prefHeight="289.0" prefWidth="500.0"/>
         </children>
      </VBox>
   </center>
   <top>
      <GridPane prefHeight="110.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="nameName" alignment="CENTER" contentDisplay="CENTER" text="Database" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
             <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnPressed" text="←" translateX="15.0"
                     translateY="15.0" GridPane.halignment="LEFT" GridPane.valignment="TOP"/>
             <Button fx:id="sadFaceButton" mnemonicParsing="false" onMouseClicked="#sadFaceButtonClicked" text="☹"
                     translateX="-15.0" translateY="15.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                     GridPane.valignment="TOP">
                 <contextMenu>
                     <ContextMenu>
                         <items>
                             <MenuItem mnemonicParsing="false" onAction="#badRecordingsPressed" text="Bad Recordings"/>
                         </items>
                     </ContextMenu>
                 </contextMenu>
             </Button>
         </children>
      </GridPane>
   </top>
</BorderPane>
